<ul class="{{ _class }}">
  {% for tag in tags %}
    <li>
      <a class="tag recuadroNoResaltado" href="{% url_for controller='package', action='search', tags=tag.name %}">{{ h.truncate(tag.display_name, 30) }}</a>
    </li>
  {% endfor %}
</ul>
